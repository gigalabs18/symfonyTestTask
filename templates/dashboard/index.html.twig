{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ pageTitle }}</h1>
    {{ form(my_form) }}
    {% if data %}
		<div>
			The timezone Europe/London has {{ data['timezoneOffset'] }} minutes offset to UTC.<br />
			February in this year has {{ data['febDays'] }} days.<br />
			Specified month ({{ data['nameOfMonth'] }}) has {{ data['numOfDaysInMonth'] }} days.
		</div> 
	{% endif %}
</div>
{% endblock %}
